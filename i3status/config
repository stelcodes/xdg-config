general {
  colors = true
  color_good = "#a3be8c"
  color_degraded = "#ebcb8b"
  color_bad = "#bf616a"
  interval = 9
}

order += "disk /"
order += "memory"
order += "cpu_usage"
order += "wireless _first_"
order += "ethernet _first_"
order += "run_watch DHCP"
order += "path_exists VPN"
order += "volume master"
order += "battery 0"
order += "tztime local"

wireless _first_ {
  format_up = "W: %essid %quality %bitrate %ip"
  format_down = "W: down"
}

ethernet _first_ {
  format_up = "E: %ip"
  format_down = "E: down"
}

volume master {
   format = "ï€¨ %volume"
   format_muted = "ï€¦ %volume"
   device = "default"
   mixer = "Master"
   mixer_idx = 0
}

battery 0 {
  format = "%status %percentage %remaining"
  format_down = "No battery"
  status_chr = "âš¡ CHR"
  status_bat = "â˜• BAT"
  status_unk = "? UNK"
  status_full = "ðŸ”‹ FULL"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

run_watch DHCP {
  pidfile = "/var/run/dhcpcd.pid"
}

run_watch VPNC {
  # file containing the PID of a vpnc process
  pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
  # path exists when a VPN tunnel launched by nmcli/nm-applet is active
  path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
  format = "%m-%d %H:%M"
}

memory {
  format = "%free"
  threshold_degraded = "10%"
}

disk "/" {
  format = "%free"
}

read_file uptime {
  path = "/proc/uptime"
}
